# Configurações do PostgreSQL
PG_PASS=your_postgres_password
PG_USER=postgres
PG_DB=song_recommendation_db
PG_HOST=localhost
PG_PORT=5432

# URL de conexão (para desenvolvimento local)
PG_URL=postgresql+asyncpg://postgres:your_postgres_password@localhost:5432/song_recommendation_db

# Configurações de autenticação JWT
SECRET_KEY=your_secret_key_here_use_openssl_rand_hex_32
ACCESS_TOKEN_EXPIRE_MINUTES=600
ALGORITHM=HS256

# Cloudinary (upload de imagens de perfil)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_URL=cloudinary://your_api_key:your_api_secret@your_cloud_name

# Configurações de email (Resend para produção, SMTP para local)
RESEND_API_KEY=re_your_resend_api_key_here
EMAIL_FROM=Rhythmate <noreply@yourdomain.com>

# SMTP (opcional, apenas para desenvolvimento local)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password

FRONTEND_URL=http://localhost:4200
